@model MyWeb.Models.UserModel

<div class="row" style="margin-top: 25px">
    <div style="margin-bottom:20px">
        <h2>Listado de usuarios</h2>
    </div>
    <table id="myTable" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Fecha de Nacimiento</th>
                <th>Sexo</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (MyWeb.Models.UserModel user in (List<MyWeb.Models.UserModel>)ViewData["users"])
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Birthdate.ToString("dd/MM/yyyy")</td>
                    <td>@user.Sex</td>
                    <td>
                        <a href="@Url.Action("SearchUser", "User", new {id= @user.Id})">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </td>
                    <td>
                        <a href="javascript:confirm(@user.Id)">
                            <span class="glyphicon glyphicon-remove text-danger"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>